CREATE SCHEMA IF NOT EXISTS Bonsais;
ALTER TABLE bonsais
ALTER COLUMN acquisition_age INT(100);

CREATE TABLE IF NOT EXISTS  Bonsais(

id UUID PRIMARY KEY NOT NULL,
name VARCHAR(100),
species VARCHAR(100),
acquisition_date DATE,
acquisition_age INT,
status VARCHAR(30)

);


CREATE TABLE IF NOT EXISTS watering (
    id UUID PRIMARY KEY,
    watering_date DATE,
    bonsai_id UUID,
    FOREIGN KEY (bonsai_id) REFERENCES Bonsais(id)
);

CREATE TABLE IF NOT EXISTS owner(

    id UUID PRIMARY KEY NOT NULL,
    name VARCHAR(100)

);

CREATE TABLE IF NOT EXISTS pruning (

    id UUID PRIMARY KEY NOT NULL,
    pruning_date DATE,
    bonsai_id UUID,
    FOREIGN KEY (bonsai_id) REFERENCES Bonsais(id)

);


ALTER TABLE Bonsais ADD COLUMN owner_id UUID REFERENCES owner(id);


CREATE TABLE IF NOT EXISTS repotting (
    id UUID PRIMARY KEY,
    repotting_date DATE,
    bonsai_id UUID,
    FOREIGN KEY (bonsai_id) REFERENCES Bonsais(id)
);